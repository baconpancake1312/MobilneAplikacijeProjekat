<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ikonica_background">

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#141932"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/asocijacijeTime"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Igrac 1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/asocijacijeP1Points"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/asocijacijeTime"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="40"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/asocijacijeProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:progress="100"
            android:progressTint="#DDDD94" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/asocijacijeTime"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Igrac 2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/asocijacijeP2Points"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="101"
                android:textAlignment="center"
                android:textColor="#50FFCD"
                android:textSize="40sp" />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:padding="5sp">

            <LinearLayout
                android:id="@+id/containerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fieldA1"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="A1"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldA2"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="A2"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldA3"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="A3"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldA4"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="10sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="A4"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/solutionA"
                    android:layout_width="160sp"
                    android:layout_height="50sp"
                    android:layout_gravity="right"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:gravity="center"
                    android:hint="A"
                    android:imeOptions="actionDone|actionSend"
                    android:singleLine="true"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fieldB1"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="B1"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldB2"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="B2"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldB3"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="B3"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldB4"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="B4"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/solutionB"
                    android:layout_width="160sp"
                    android:layout_height="50sp"
                    android:layout_gravity="right"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:gravity="center"
                    android:hint="B"
                    android:imeOptions="actionDone|actionSend"
                    android:singleLine="true"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <EditText
                android:id="@+id/AsocijacjeSolution"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_rectangle_shape"
                android:gravity="center"
                android:hint="Solution"
                android:singleLine="true"
                android:textColorHint="@color/white" />

            <LinearLayout
                android:id="@+id/containerC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/solutionC"
                    android:layout_width="160sp"
                    android:layout_height="50sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:gravity="center"
                    android:hint="C"
                    android:imeOptions="actionDone|actionSend"
                    android:singleLine="true"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldC4"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="C4"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldC3"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="C3"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldC2"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="C2"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldC1"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="C1"
                    android:tag="false"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="100dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/solutionD"
                    android:layout_width="160sp"
                    android:layout_height="50sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_rectangle_shape"
                    android:gravity="center"
                    android:hint="D"
                    android:imeOptions="actionDone|actionSend"
                    android:singleLine="true"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldD4"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="D4"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldD3"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="D3"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldD2"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5sp"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="D2"
                    android:tag="false"
                    android:textColorHint="@color/white" />

                <TextView
                    android:id="@+id/fieldD1"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:layout_gravity="right"
                    android:background="@color/buttonSecondary"
                    android:gravity="center"
                    android:hint="D1"
                    android:tag="false"
                    android:textColorHint="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>